<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_tasks"
    app:startDestination="@id/tasksFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/tasksFragment"
        android:name="com.example.thingtodo.feature.task.TasksFragment"
        android:label="TasksFragment"
        tools:layout="@layout/fragment_tasks">
        <action
            android:id="@+id/action_tasksFragment_to_myTasksFragent"
            app:destination="@id/myTasksFragent" />
    </fragment>

    <fragment
        android:id="@+id/myTasksFragent"
        android:name="com.example.thingtodo.feature.task.MyTasksFragment"
        android:label="MyTasksFramgent"
        tools:layout="@layout/fragment_my_tasks" />
</navigation>